                    <label for="option3">Ageism</label>
                    <input type="checkbox" id="option4" name="type" value="Antisemitism">
                    <label for="option4">Antisemitism</label>
                    <input type="checkbox" id="option5" name="type" value="Anti-Asian">
                    <label for="option5">Anti-Asian</label>
                    <input type="checkbox" id="option6" name="type" value="Anti-Black">
                    <label for="option6">Anti-Black</label>
                    <input type="checkbox" id="option7" name="type" value="Anti-Indigenous">
                    <label for="option7">Anti-Indigenous</label>
                    <input type="checkbox" id="option8" name="type" value="Antisemitism">
                    <label for="option8">Antisemitism</label>
                    <input type="checkbox" id="option9" name="type" value="Classism">
                    <label for="option9">Classism</label>
                    <input type="checkbox" id="option10" name="type" value="Colorism">
                    <label for="option10">Colorism</label>
                    <input type="checkbox" id="option11" name="type" value="Domestic Terrorism">
                    <label for="option11">Domestic Terrorism</label>
                    <input type="checkbox" id="option12" name="type" value="Fatphobia">
                    <label for="option12">Fatphobia</label>
                    <input type="checkbox" id="option13" name="type" value="Homophobia">
                    <label for="option13">Homophobia</label>
                    <input type="checkbox" id="option14" name="type" value="Islamophobia">
                    <label for="option14">Islamophobia</label>
                    <input type="checkbox" id="option15" name="type" value="Misogynoir">
                    <label for="option15">Misogynoir</label>
                    <input type="checkbox" id="option16" name="type" value="Racism">
                    <label for="option16">Racism</label>
                    <input type="checkbox" id="option17" name="type" value="Sexism">
                    <label for="option17">Sexism</label>
                    <input type="checkbox" id="option18" name="type" value="Transmisogyny">
                    <label for="option18">Transmisogyny</label>
                    <input type="checkbox" id="option19" name="type" value="Transphobia">
                    <label for="option19">Transphobia</label>
                    <input type="checkbox" id="option20" name="type" value="Xenophobia">
                    <label for="option20">Xenophobia</label>
                    <input type="checkbox" id="option21" name="type" value="Other">
                    <label for="option21">Other</label>
            

                <input class="submit" type="submit" value="Submit Report">
            </fieldset>
        </form>
    </span>
    <button class="indexNew">
        <a href="/TIFAC/"> 
        Back to Timeline
        </a>
    </button>
</body>
</html>